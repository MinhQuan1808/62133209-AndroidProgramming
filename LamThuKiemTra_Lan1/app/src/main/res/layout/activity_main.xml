<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnC1"
        android:layout_width="125dp"
        android:layout_height="80dp"
        android:layout_marginTop="92dp"
        android:background="@drawable/bogoc"
        android:text="C창u 1"
        app:layout_constraintEnd_toStartOf="@+id/btnC2"
        app:layout_constraintHorizontal_bias="0.633"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnC2"
        android:layout_width="125dp"
        android:layout_height="80dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="52dp"
        android:background="@drawable/bogoc"
        android:text="C창u 2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnC3"
        android:layout_width="125dp"
        android:layout_height="80dp"
        android:layout_marginStart="68dp"
        android:background="@drawable/bogoc"
        android:text="C창u 3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnC4"
        app:layout_constraintHorizontal_bias="0.024"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnC1"
        app:layout_constraintVertical_bias="0.083" />

    <Button
        android:id="@+id/btnC4"
        android:layout_width="125dp"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="52dp"
        android:background="@drawable/bogoc"
        android:text="C창u 4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnC2"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>